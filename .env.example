# Configurazione Ethereum Sepolia
# Copia questo file in .env e inserisci i tuoi valori reali

# URL dell'endpoint Alchemy o Infura per Sepolia
SEPOLIA_ENDPOINT_URL=https://eth-sepolia.g.alchemy.com/v2/TUO_API_KEY

# La tua chiave privata del wallet (ATTENZIONE: NON condividere mai!)
MY_PRIVATE_KEY=la_tua_chiave_privata_qui

# Il tuo indirizzo Ethereum
MY_ADDRESS=0xTuoIndirizzoEthereumQui

# Hash della transazione da leggere (opzionale, per leggi_tx.py)
TX_HASH_DA_LEGGERE=0xHashDellaTransazioneQui

# Il tuo cognome o testo da inserire nella blockchain
COGNOME=TuoCognome
